<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:res="clr-namespace:SoapBox.Demo.PinBall"
    xmlns:local="clr-namespace:SoapBox.Demo.PinBall"
    x:Class="SoapBox.Demo.PinBall.PinBallOptionsPadView">

    <DataTemplate DataType="{x:Type local:PinBallOptionsPad}">
        <CheckBox IsChecked="{Binding SoundEdit}">
            <TextBlock Text="{x:Static res:Resources.Strings.Options_PinBallOptions_General_Sound}"/>
        </CheckBox> 
    </DataTemplate>

</ResourceDictionary>