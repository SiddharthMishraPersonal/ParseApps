<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SoapBox.Demo.PinBall"
    xmlns:arena="clr-namespace:SoapBox.Core.Arena;assembly=SoapBox.Core.Arena"
    x:Class="SoapBox.Demo.PinBall.PinBallFlipperView">

    <!-- Make it white with a black border -->
    <DataTemplate DataType="{x:Type local:PinBallFlipperSprite}">
        <Path Stroke="White" StrokeThickness="1" Data="{Binding Path=Geometry}" Fill="WhiteSmoke">
            <Path.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="0">
                    
                </DropShadowEffect>
            </Path.Effect>
        </Path>
    </DataTemplate>
</ResourceDictionary>