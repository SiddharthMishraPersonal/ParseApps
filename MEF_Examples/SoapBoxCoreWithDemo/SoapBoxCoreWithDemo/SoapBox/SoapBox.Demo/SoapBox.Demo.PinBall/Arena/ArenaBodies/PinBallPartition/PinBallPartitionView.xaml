<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SoapBox.Demo.PinBall"
    xmlns:arena="clr-namespace:SoapBox.Core.Arena;assembly=SoapBox.Core.Arena"
    x:Class="SoapBox.Demo.PinBall.PinBallPartitionView">

    <!-- Make it a shiny cylinder -->
    <DataTemplate DataType="{x:Type local:PinBallPartitionSprite}">
        <Path Data="{Binding Path=Geometry}">
            <Path.Fill>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Offset="0" Color="Black"/>
                    <GradientStop Offset="0.33" Color="White"/>
                    <GradientStop Offset="1" Color="Black"/>
                </LinearGradientBrush>
            </Path.Fill>
        </Path>
    </DataTemplate>

</ResourceDictionary>